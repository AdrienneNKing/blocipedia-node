<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1 id="wiki-title"><%= wiki.title %></h1>
      <% if(wiki.private == true) { %>
        <button class="btn btn-danger">Private Wiki</button>
      <% } %>
      <% if(wiki.private !== true) { %>
        <button class="btn btn-primary">Public Wiki</button>
      <% } %>
      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
        <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

      <%- wiki.body %>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
