<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Wiki</h1>

      <% if(wiki.private == true) { %>
        <button class="btn btn-danger">Private Wiki</button>
      <% } %>
      <% if(wiki.private !== true) { %>
        <button class="btn btn-primary">Public Wiki</button>
      <% } %>

      <form action="/wikis/<%= wiki.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>

          <input value="<%= wiki.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="body">Body - please edit using Markdown</label>

          <textarea rows="4" class="form-control" name="body" placeholder="Enter body here"><%= wiki.body %></textarea>
        </div>
      </form>
      <form action="/wikis/<%= wiki.id %>/add-collaborator" method="post">
      <div class="form-group">
        <label for="collaborator">Add a collaborator to your private wiki</label>
        <input name="collaborator" class="form-control" placeholder="Enter user's email" />
        <button type="submit" class="btn btn-primary">Add Collaborator</button>
      </div>
    </form>
      <form action="/wikis/<%= wiki.id %>/remove-collaborator" method="post">
        <div class="form-group">
          <label for="collaborator">Remove a collaborator from your private wiki</label>
          <input name="collaborator" class="form-control" placeholder="Enter user's email" />
          <button type="submit" class="btn btn-primary">Remove Collaborator</button>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
